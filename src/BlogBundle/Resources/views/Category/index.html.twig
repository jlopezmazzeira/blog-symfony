{% extends "BlogBundle::layout.html.twig" %}

{% block content %}
	<div class="col-lg-6">
		<h2>Todas las categoriass</h2>
		<hr />
		<a href="{{path("blog_add_category")}}" class="btn btn-success">AÃ±adir categoria</a>
		<hr />
		{% for message in app.session.flashbag().get('status') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Descripci&oacute;n</th>
					<th>Editar</th>
					<th>Eliminar</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.name }}</td>
						<td>{{ category.description }}</td>
						<td><a href="{{path("blog_edit_category",{"id":category.id})}}" class="btn btn-primary">Editar</a></td>
						<td>
							{% if category.entries|length == 0 %}
								<a href="{{path("blog_delete_category",{"id":category.id})}}" class="btn btn-danger">Eliminar</a>
							{% else %}
								Categoria en uso
							{% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="clearfix"></div>
{% endblock %}